<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/valorantColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/valorantColor"
            tools:context=".ui.home.HomeFragment">

            <Button
                android:id="@+id/btn_agents"
                android:layout_width="231dp"
                android:layout_height="61dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="89dp"
                android:layout_marginTop="128dp"
                android:layout_marginEnd="90dp"
                android:background="#FFFFFF"
                android:clickable="true"
                android:elevation="10dp"
                android:focusable="true"
                android:text="@string/agents"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_weapons"
                android:layout_width="231dp"
                android:layout_height="61dp"
                android:layout_below="@+id/btn_agents"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="90dp"
                android:layout_marginTop="39dp"
                android:layout_marginEnd="90dp"
                android:background="#FFFFFF"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/weapons"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_info"
                android:layout_width="231dp"
                android:layout_height="61dp"
                android:layout_below="@+id/btn_collection"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="87dp"
                android:layout_marginTop="33dp"
                android:layout_marginEnd="84dp"
                android:background="#FFFFFF"
                android:fadeScrollbars="false"
                android:text="@string/info"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_maps"
                android:layout_width="231dp"
                android:layout_height="61dp"
                android:layout_below="@+id/btn_weapons"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="91dp"
                android:layout_marginTop="33dp"
                android:layout_marginEnd="90dp"
                android:background="#FFFFFF"
                android:text="@string/maps"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_collection"
                android:layout_width="231dp"
                android:layout_height="61dp"
                android:layout_below="@+id/btn_maps"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="88dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="86dp"
                android:background="#FFFFFF"
                android:text="@string/collection"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="17dp"
                android:src="@drawable/circle" />

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ads:cardBackgroundColor="@color/valorantColor"
            android:layout_marginTop="100dp">

        </androidx.cardview.widget.CardView>


    </LinearLayout>
</ScrollView>
