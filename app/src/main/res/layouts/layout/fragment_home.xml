<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/valorantColor"
    tools:context=".ui.home.HomeFragment">

    <Button
        android:id="@+id/btn_agents"
        android:layout_width="231dp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="113dp"
        android:layout_marginEnd="90dp"
        android:background="#FFFFFF"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/agents"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_weapons"
        android:layout_width="231dp"
        android:layout_height="61dp"
        android:layout_below="@+id/btn_agents"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="90dp"
        android:background="#FFFFFF"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/weapons"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_info"
        android:layout_width="231dp"
        android:layout_height="61dp"
        android:layout_below="@+id/btn_media"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="87dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="84dp"
        android:background="#FFFFFF"
        android:fadeScrollbars="false"
        android:text="@string/info"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_maps"
        android:layout_width="231dp"
        android:layout_height="61dp"
        android:layout_below="@+id/btn_weapons"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="91dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="90dp"
        android:background="#FFFFFF"
        android:text="@string/maps"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_media"
        android:layout_width="231dp"
        android:layout_height="61dp"
        android:layout_below="@+id/btn_maps"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="88dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="86dp"
        android:background="#FFFFFF"
        android:text="@string/media"
        android:textStyle="bold" />

</RelativeLayout>