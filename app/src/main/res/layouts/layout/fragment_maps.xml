<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/valorantColor"
    android:orientation="vertical"
    tools:context=".ui.maps.MapsFragment" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/btn_split"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/map_split" />

            <ImageView
                android:id="@+id/btn_split2"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:src="@drawable/minimap_split" />

            <ImageView
                android:id="@+id/btn_bind"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/map_bind" />

            <ImageView
                android:id="@+id/btn_split3"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:src="@drawable/minimap_bind" />

            <ImageView
                android:id="@+id/btn_haven"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/map_haven" />

            <ImageView
                android:id="@+id/btn_split4"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:src="@drawable/minimap_haven"
                android:layout_marginBottom="80dp"/>


        </LinearLayout>
    </ScrollView>
