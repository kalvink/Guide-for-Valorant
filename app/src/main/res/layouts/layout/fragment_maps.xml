<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/valorantColor"
    android:orientation="vertical"
    tools:context=".ui.maps.MapsFragment" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/btn_bind"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/map_bind" />

            <View
                android:id="@+id/divider68"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_weight="1"
                android:background="#FFFFFF" />

            <ImageView
                android:id="@+id/btn_haven"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/map_haven" />

            <View
                android:id="@+id/divider69"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_weight="1"
                android:background="#FFFFFF" />

            <ImageView
                android:id="@+id/btn_ascent"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/map_split" />

            <View
                android:id="@+id/divider69"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_weight="1"
                android:background="#FFFFFF" />

            <ImageView
                android:id="@+id/btn_ascent"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/map_split" />
        </LinearLayout>
    </ScrollView>
